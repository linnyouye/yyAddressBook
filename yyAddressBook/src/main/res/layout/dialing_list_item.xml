<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem" >

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:textColor="#fff"
        android:textSize="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@+id/tvName"
            style="@style/TvChildName"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tvPhone"
            style="@style/TvChildPhone"
            android:layout_width="120dp"
            android:layout_below="@id/tvName" />

        <TextView
            android:id="@+id/tvDate"
            style="@style/TvChildPhone"
            android:layout_below="@id/tvName"
            android:layout_toRightOf="@id/tvPhone" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/ibtnCall"
        style="@style/RoundIbtn"
        android:background="@drawable/icon_call"
        android:contentDescription="@string/ibtn_description"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</LinearLayout>